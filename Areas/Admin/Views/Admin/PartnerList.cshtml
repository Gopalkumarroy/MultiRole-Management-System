@model List<Sewa360.Areas.Admin.Models.Partner>
@{
    Layout = "~/Areas/Admin/Views/Shared/_dashboardlayout.cshtml";
}


@if (TempData["SuccessMessage"] != null)
{
    <div id="successAlert" class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
    </div>

    <script>
        setTimeout(function () {
        var alert = document.getElementById('successAlert');
        if (alert) {
        alert.classList.remove("show");
        alert.classList.add("fade");
        setTimeout(() => alert.remove(), 500); // remove from DOM
        }
        }, 4000);
    </script>
}

<style>
    @@media (max-width: 576px) {
    .container

    {
    padding-left: 0.5rem;
    padding-right: 0.5rem;
    max-width: 100% !important;
    }

    .card {
    width: 98% !important;
    max-width: 98% !important;
    margin: 0 auto;
    border-radius: 1rem;
    box-shadow: 0 0 12px rgba(0, 0, 0, 0.08);
    }

    table th, table td {
    font-size: 0.85rem;
    white-space: nowrap;
    }

    .btn {
    font-size: 0.8rem;
    }

    }
</style>



<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-success text-white text-center">
            <h4 class="mb-0">All Partners</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="adminPartnerTable" class="table table-bordered table-striped table-hover w-100">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>S.No.</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Password</th>
                            <th>Joining On</th>
                            <th>Referral Code</th>
                            <th>Active</th>
                             <th>Business Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            int i = 1;
                        }

                        @foreach (var p in Model)
                        {
                            <tr class="text-center">
                                <td class="text-center">@i</td>
                                <td>@(p.First_Name + " " + p.Last_Name)</td>
                                <td>@p.Partner_Email</td>
                                <td>@p.Partner_Phone</td>
                                <td>@p.Partner_Password</td>
                               
                                <td>@(p.CreatedOn?.ToString("dd-MM-yyyy hh:mm tt") ?? "-")</td>
                                <td>@p.Manager_Code</td>
                                <td>
                                    @if (p.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>Rs. 10,000</td> <!-- Static value -->
                                <td>
                                    <a href="@Url.Action("PartnerDetails", "Partner", new { area = "Admin", id = p.Partner_Id })" class="btn btn-info btn-sm me-1">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "Partner", new { id = p.Partner_Id })" class="btn btn-warning btn-sm me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Partner", new { id = p.Partner_Id })" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- DataTables Dependencies -->
<link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

<!-- DataTable Initialization -->
<script>
    $(document).ready(function () {
        $('#adminPartnerTable').DataTable({
            responsive: true
        });
    });
</script>
