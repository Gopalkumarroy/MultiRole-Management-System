@model List<Sewa360.Areas.Admin.Models.BookViewModel>
@{
    //Layout = null;
    Layout = "~/views/shared/_layoutpartner.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    .menu-wrapper {
        position: relative;
        display: inline-block;
        margin: 30px;
        font-family: 'Segoe UI', sans-serif;
    }

    .menu-button {
        background-color: #0077b6;
        color: white;
        padding: 12px 18px;
        border-radius: 6px;
        font-size: 17px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .dropdown-menu {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        background-color: #fff;
        border: 1px solid #caf0f8;
        border-radius: 6px;
        min-width: 220px;
        z-index: 1000;
        padding: 10px 0;
    }

    .menu-wrapper:hover .dropdown-menu {
        display: block;
    }

    .dropdown-item {
        position: relative;
        padding: 10px 16px;
        color: #023047;
        font-weight: 600;
        cursor: pointer;
        white-space: nowrap;
    }

        .dropdown-item:hover {
            background-color: #e0f4ff;
        }

    .sub-menu {
        display: none;
        position: absolute;
        top: 0;
        left: 100%;
        min-width: 180px;
        background-color: #f9fcff;
        border: 1px solid #caf0f8;
        border-radius: 6px;
        z-index: 1001;
    }

    .dropdown-item:hover .sub-menu {
        display: block;
    }

    .sub-menu a {
        display: block;
        padding: 8px 12px;
        text-decoration: none;
        font-size: 14px;
        color: #0077b6;
        border-bottom: 1px solid #e6f4ff;
    }

        .sub-menu a:hover {
            background-color: #caf0f8;
            color: #023047;
        }

        .sub-menu a:last-child {
            border-bottom: none;
        }
</style>

<div class="menu-wrapper">
    <div class="menu-button">
        <i class="fas fa-book"></i>
        <span>Books</span>
        <i class="fas fa-caret-down ms-auto"></i>
    </div>

    <div class="dropdown-menu">
        @foreach (var book in Model)
        {
            <div class="dropdown-item">
                <i class="fas fa-angle-right me-2"></i> @book.Name
                <div class="sub-menu">
                    @foreach (var sub in book.SubBooks)
                    {
                        <a href="#">• @sub.Name</a>
                    }
                </div>
            </div>
        }
    </div>
</div>
