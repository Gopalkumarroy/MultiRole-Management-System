@model Sewa360.Models.Branch
@{
    //Layout = "~/Views/Shared/_layoutcompany.cshtml";
    Layout = "~/Areas/Admin/Views/Shared/_dashboardlayout.cshtml";
    ViewBag.Title = "Branch Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0 text-center">Branch Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Company Name</dt>
                <dd class="col-sm-9">@ViewBag.CompanyName</dd>

                <dt class="col-sm-3">Branch Name</dt>
                <dd class="col-sm-9">@Model.Branch_Name</dd>

                <dt class="col-sm-3">Branch Code</dt>
                <dd class="col-sm-9">@Model.Branch_Code</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Branch_Phone</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Branch_Email</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Model.Department</dd>

                <dt class="col-sm-3">Salary</dt>
                <dd class="col-sm-9">@Model.Salary</dd>

                <dt class="col-sm-3">Latitude</dt>
                <dd class="col-sm-9">@Model.Lattitude</dd>

                <dt class="col-sm-3">Longitude</dt>
                <dd class="col-sm-9">@Model.Longitude</dd>

                <dt class="col-sm-3">Remarks</dt>
                <dd class="col-sm-9">@Model.Remarks</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="BranchListPage" class="btn btn-outline-primary">Back to List</a>
                <a asp-action="EditBranch" asp-route-id="@Model.Branch_Id" class="btn btn-warning text-white">Edit</a>
            </div>
        </div>
    </div>
</div>
