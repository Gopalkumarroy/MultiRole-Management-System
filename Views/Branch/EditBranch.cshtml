@model Sewa360.Models.Branch

@{
   // Layout = "~/Views/Shared/_layoutcompany.cshtml";
    Layout = "~/Areas/Admin/Views/Shared/_dashboardlayout.cshtml";
    ViewBag.Title = "Edit Branch";
}

<div class="container mt-4">
    <div class="card shadow rounded-3">
        <div class="card-header bg-warning text-white">
            <h4 class="mb-0 text-center">Edit Branch</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditBranch" method="post">
                @Html.HiddenFor(model => model.Branch_Id)
              @*   @Html.HiddenFor(model => model.Company_Id) *@

                @* <div class="col-md-6">
                    <label asp-for="Company_Id" class="form-label">Company <span class="text-danger">*</span></label>
                    <select asp-for="Company_Id" asp-items="ViewBag.CompanyList" class="form-select">
                        <option value="">-- Select Company --</option>
                    </select>
                    <span asp-validation-for="Company_Id" class="text-danger"></span>
                </div> *@

                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="Company_Id" class="form-label">Company <span class="text-danger">*</span></label>
                        <select asp-for="Company_Id" asp-items="ViewBag.CompanyList" class="form-select">
                            <option value="">-- Select Company --</option>
                        </select>
                        <span asp-validation-for="Company_Id" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Branch_Name" class="form-label">Branch Name <span class="text-danger">*</span></label>
                        <input asp-for="Branch_Name" class="form-control" />
                        <span asp-validation-for="Branch_Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Branch_Code" class="form-label">Branch Code <span class="text-danger">*</span></label>
                        <input asp-for="Branch_Code" class="form-control" />
                        <span asp-validation-for="Branch_Code" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Branch_Phone" class="form-label">Phone</label>
                        <input asp-for="Branch_Phone" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Branch_Email" class="form-label">Email</label>
                        <input asp-for="Branch_Email" type="email" class="form-control" />
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Address" class="form-label">Address</label>
                        <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Department" class="form-label">Department</label>
                        <input asp-for="Department" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Salary" class="form-label">Salary</label>
                        <input asp-for="Salary" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Lattitude" class="form-label">Latitude</label>
                        <input asp-for="Lattitude" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Longitude" class="form-label">Longitude</label>
                        <input asp-for="Longitude" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Remarks" class="form-label">Remarks</label>
                        <textarea asp-for="Remarks" class="form-control" rows="2"></textarea>
                    </div>

                    <div class="col-md-6 d-flex align-items-center">
                        <div class="form-check mt-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Is Active</label>
                        </div>
                    </div>

                    <div class="col-12 text-center mt-4">
                        <button type="submit" class="btn btn-warning text-white px-4">Update Branch</button>
                        <a asp-action="BranchList" class="btn btn-outline-secondary ms-3">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
