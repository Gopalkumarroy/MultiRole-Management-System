@model Sewa360.Models.Branch

@{
    //Layout = "~/Views/Shared/_layoutcompany.cshtml";
    Layout = "~/Areas/Admin/Views/Shared/_dashboardlayout.cshtml";
    ViewBag.Title = "Create Branch";
}

<div class="container mt-4">
    <div class="card shadow rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0 text-center">Add New Branch</h4>
        </div>
        <div class="card-body">
            <form asp-action="CreateBranch" method="post">
                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="Company_Id" class="form-label">
                            Company <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Company_Id" asp-items="ViewBag.CompanyList" class="form-select">
                            <option value="">-- Select Company --</option>
                        </select>
                        <span asp-validation-for="Company_Id" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Branch_Name" class="form-label">
                            Branch Name <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Branch_Name" class="form-control" placeholder="Enter branch name" />
                        <span asp-validation-for="Branch_Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Branch_Code" class="form-label">
                            Branch Code <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Branch_Code" class="form-control" placeholder="e.g. BR-001" />
                        <span asp-validation-for="Branch_Code" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Branch_Phone" class="form-label">
                            Phone <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Branch_Phone" class="form-control" placeholder="Enter contact number" />
                        <span asp-validation-for="Branch_Phone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Branch_Email" class="form-label">
                            Email <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Branch_Email" type="email" class="form-control" placeholder="Enter email address" />
                        <span asp-validation-for="Branch_Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Address" class="form-label">
                            Address <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="Address" class="form-control" rows="2" placeholder="Enter full address"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Department" class="form-label">
                            Department
                        </label>
                        <input asp-for="Department" class="form-control" placeholder="e.g. Sales, IT, HR" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                  @*   <div class="col-md-6">
                        <label asp-for="Salary" class="form-label">Salary Range</label>
                        <input asp-for="Salary" class="form-control" placeholder="e.g. ₹25,000 - ₹50,000" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Lattitude" class="form-label">Latitude</label>
                        <input asp-for="Lattitude" class="form-control" placeholder="e.g. 28.6139" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Longitude" class="form-label">Longitude</label>
                        <input asp-for="Longitude" class="form-control" placeholder="e.g. 77.2090" />
                    </div> *@

                    <div class="col-md-6">
                        <label asp-for="Remarks" class="form-label">Remarks</label>
                        <textarea asp-for="Remarks" class="form-control" rows="2" placeholder="Additional notes (optional)"></textarea>
                    </div>

                    <div class="col-md-6 d-flex align-items-center">
                        <div class="form-check mt-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">Is Active</label>
                        </div>
                    </div>

                    <div class="col-12 text-center mt-4">
                        <button type="submit" class="btn btn-success px-4">Save Branch</button>
                        <a asp-action="BranchListPage" class="btn btn-outline-secondary ms-3">Cancel</a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}