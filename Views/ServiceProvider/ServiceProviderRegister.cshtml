                $(this).hide();
                $("#open").show();
                $("#txtPassword").attr("type", "text");
            });

            $("#open").on("mousedown", function () {
                $(this).hide();
                $("#closed").show();
                $("#txtPassword").attr("type", "password");
            });
        });
    </script>

